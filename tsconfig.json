{
  "compilerOptions": {
    "incremental": true,                              
    "target": "ES2020",                                  
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                    
    "module": "ES2022",                               
    "rootDir": "./src",                                  
    "moduleResolution": "Bundler",                     
    "sourceMap": true,                                                        
    "outDir": "./dist",                                   
    "esModuleInterop": true,                                              
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                 
    "alwaysStrict": true,                            
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*", "**/*.ts"],
  "exclude": ["node_modules","jest.config.ts","vitest.config.ts"]
}